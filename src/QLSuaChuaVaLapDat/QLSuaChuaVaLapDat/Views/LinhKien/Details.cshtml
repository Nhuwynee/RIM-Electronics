@model QLSuaChuaVaLapDat.Models.LinhKien

@{
    Layout = "~/Views/Shared/_LayoutQuanLi.cshtml";
    ViewData["Title"] = "Chi tiết linh kiện";
}

<div class="container">
    <h3>Chi tiết linh kiện</h3>

    <div style="max-width: 800px;">
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px; margin-bottom: 30px;">
            <div>
                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: var(--secondary-text-clr);">ID Linh kiện:</label>
                    <div style="padding: 10px; background-color: var(--light-grey-bg); border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr);">
                        @Html.DisplayFor(model => model.IdLinhKien)
                    </div>
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: var(--secondary-text-clr);">Tên linh kiện:</label>
                    <div style="padding: 10px; background-color: var(--light-grey-bg); border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr);">
                        @Html.DisplayFor(model => model.TenLinhKien)
                    </div>
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: var(--secondary-text-clr);">Loại linh kiện:</label>
                    <div style="padding: 10px; background-color: var(--light-grey-bg); border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr);">
                        @Html.DisplayFor(model => model.IdLoaiLinhKienNavigation.TenLoaiLinhKien)
                    </div>
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: var(--secondary-text-clr);">Nhà sản xuất:</label>
                    <div style="padding: 10px; background-color: var(--light-grey-bg); border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr);">
                        @Html.DisplayFor(model => model.IdNsxNavigation.TenNsx)
                    </div>
                </div>
            </div>

            <div>
                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: var(--secondary-text-clr);">Giá:</label>
                    <div style="padding: 10px; background-color: var(--light-grey-bg); border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr); font-weight: 500; color: var(--accent-clr);">
                        @Model.Gia.ToString("N0") VNĐ
                    </div>
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: var(--secondary-text-clr);">Số lượng:</label>
                    <div style="padding: 10px; background-color: var(--light-grey-bg); border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr);">
                        <span style="padding: 4px 8px; background-color: @(Model.SoLuong > 0 ? "var(--success-clr)" : "var(--danger-clr)"); color: white; border-radius: var(--border-radius-sm); font-size: 0.9em;">
                            @Html.DisplayFor(model => model.SoLuong)
                        </span>
                    </div>
                </div>

                <div style="margin-bottom: 20px;">
                    <label style="display: block; margin-bottom: 5px; font-weight: 600; color: var(--secondary-text-clr);">Thời gian bảo hành:</label>
                    <div style="padding: 10px; background-color: var(--light-grey-bg); border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr);">
                        @if (Model.ThoiGianBaoHanh > 0)
                        {
                            <span>@Model.ThoiGianBaoHanh tháng</span>
                        }
                        else
                        {
                            <span>Không bảo hành</span>
                        }
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Anh))
                {
                    <div style="margin-bottom: 20px;">
                        <label style="display: block; margin-bottom: 5px; font-weight: 600; color: var(--secondary-text-clr);">Ảnh:</label>
                        <div style="padding: 10px; background-color: var(--light-grey-bg); border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr);">
                            <img src="@Model.Anh" alt="@Model.TenLinhKien" style="max-width: 100%; max-height: 200px; border-radius: var(--border-radius-sm);" />
                        </div>
                    </div>
                }
            </div>
        </div>

        <div style="margin-bottom: 30px;">
            <label style="display: block; margin-bottom: 5px; font-weight: 600; color: var(--secondary-text-clr);">Điều kiện bảo hành:</label>
            <div style="padding: 15px; background-color: var(--light-grey-bg); border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr); white-space: pre-wrap;">
                @Html.DisplayFor(model => model.DieuKienBaoHanh)
            </div>
        </div>

        <div style="display: flex; gap: 15px;">
            <a asp-action="Edit" asp-route-id="@Model?.IdLinhKien" style="padding: 12px 24px; background-color: var(--warning-clr); color: white; text-decoration: none; border-radius: var(--border-radius-sm); font-weight: 500;">Chỉnh sửa</a>
            <a asp-action="Index" style="padding: 12px 24px; background-color: var(--light-grey-bg); color: var(--text-clr); text-decoration: none; border-radius: var(--border-radius-sm); border: 1px solid var(--line-clr);">Quay lại danh sách</a>
        </div>
    </div>
</div>
